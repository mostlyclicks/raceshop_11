        <%= yield %>
      </div>

    <% else %>

      <div class="col-md-2">
        <%= render partial: 'spree/shared/sidebar' if content_for? :sidebar %>    
      </div>

      <div id="content" class="col-md-10 columns <%= !content_for?(:sidebar) ? "sixteen" : "twelve omega" %>" data-hook>
        <%= flash_messages %>
        <%= yield %>
      </div>

    <% end %>






    <%= yield :templates %>

  </div>

